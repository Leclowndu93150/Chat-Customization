$C = "../Common.ui";

@FieldLabelStyle = LabelStyle(FontSize: 12, TextColor: #96a9be, RenderBold: true, RenderUppercase: true);
@FieldDescStyle = LabelStyle(FontSize: 11, TextColor: #6e7da1);
@SectionLabelStyle = LabelStyle(FontSize: 14, TextColor: #93844c, RenderBold: true, RenderUppercase: true);

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 800, Height: 850);

    #Title {
      Group {
        Anchor: (Height: 50);

        Label #TitleLabel {
          Style: (
            FontSize: 24,
            LetterSpacing: 2,
            RenderUppercase: true,
            RenderBold: true,
            TextColor: #ccb588,
            HorizontalAlignment: Center,
            VerticalAlignment: Center
          );
          Text: "Edit Style Preset";
        }
      }
    }

    #Content {
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      Padding: (Top: 10, Right: 20, Left: 20, Bottom: 20);

      Group {
        LayoutMode: Top;
        Anchor: (Bottom: 15);

        Label { Text: "ID"; Style: @FieldLabelStyle; Anchor: (Bottom: 4); }
        Label { Text: "Unique identifier (lowercase, no spaces)"; Style: @FieldDescStyle; Anchor: (Bottom: 4); }
        $C.@TextField #IdField {
          Anchor: (Width: 300, Height: 32, Bottom: 12);
        }

        Label { Text: "DISPLAY NAME"; Style: @FieldLabelStyle; Anchor: (Bottom: 4); }
        $C.@TextField #DisplayNameField {
          Anchor: (Width: 300, Height: 32, Bottom: 12);
        }

        Label { Text: "PRIORITY"; Style: @FieldLabelStyle; Anchor: (Bottom: 4); }
        Label { Text: "Higher priority = checked first (0-100)"; Style: @FieldDescStyle; Anchor: (Bottom: 4); }
        $C.@TextField #PriorityField {
          Anchor: (Width: 120, Height: 32);
        }
      }

      Group #Separator1 {
        Anchor: (Height: 1, Bottom: 15);
        Background: (Color: #2b3542);
      }

      Group {
        LayoutMode: Top;
        Anchor: (Bottom: 15);

        Label { Text: "PREVIEW"; Style: @SectionLabelStyle; Anchor: (Bottom: 8); }

        Group #PreviewContainer {
          Anchor: (Height: 50, Bottom: 15);
          Background: (Color: #0a0f17);
          Padding: (Horizontal: 14, Vertical: 12);
          LayoutMode: Left;

          Label #PreviewPrefix { Style: (FontSize: 16, TextColor: #ffffff); }
          Label #PreviewName { Style: (FontSize: 16, TextColor: #ffffff); }
          Label #PreviewPronouns { Style: (FontSize: 16, TextColor: #aaaaaa); }
          Label #PreviewSuffix { Style: (FontSize: 16, TextColor: #ffffff); }
          Label #PreviewSeparator { Text: ": "; Style: (FontSize: 16, TextColor: #ffffff); }
          Label #PreviewMessage { Text: "Hello, World!"; Style: (FontSize: 16, TextColor: #ffffff); }
        }
      }

      Group #Separator2 {
        Anchor: (Height: 1, Bottom: 15);
        Background: (Color: #2b3542);
      }

      Group {
        LayoutMode: Left;

        Group {
          FlexWeight: 1;
          LayoutMode: Top;
          Padding: (Right: 20);

          Label { Text: "PREFIX"; Style: @SectionLabelStyle; Anchor: (Bottom: 8); }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 100, Bottom: 10);

            $C.@TextField #PrefixField {
              Anchor: (Width: 180, Height: 38);
            }

            ColorPicker #PrefixColorPicker {
              Anchor: (Width: 120, Height: 100, Left: 12);
              Style: $C.@DefaultColorPickerStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 28, Bottom: 15);

            $C.@CheckBoxWithLabel #PrefixBold { @Text = "Bold"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #PrefixItalic { @Text = "Italic"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #PrefixUnderline { @Text = "Underline"; }
          }

          Label { Text: "NAME"; Style: @SectionLabelStyle; Anchor: (Bottom: 8); }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 100, Bottom: 10);

            $C.@TextField #NicknameField {
              Anchor: (Width: 180, Height: 38);
            }

            ColorPicker #NameColorPicker {
              Anchor: (Width: 120, Height: 100, Left: 12);
              Style: $C.@DefaultColorPickerStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 28, Bottom: 15);

            $C.@CheckBoxWithLabel #NameBold { @Text = "Bold"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #NameItalic { @Text = "Italic"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #NameUnderline { @Text = "Underline"; }
          }

          Label { Text: "PRONOUNS"; Style: @SectionLabelStyle; Anchor: (Bottom: 8); }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 100, Bottom: 10);

            $C.@TextField #PronounsField {
              Anchor: (Width: 180, Height: 38);
            }

            ColorPicker #PronounsColorPicker {
              Anchor: (Width: 120, Height: 100, Left: 12);
              Style: $C.@DefaultColorPickerStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 28);

            $C.@CheckBoxWithLabel #PronounsBold { @Text = "Bold"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #PronounsItalic { @Text = "Italic"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #PronounsUnderline { @Text = "Underline"; }
          }
        }

        Group {
          FlexWeight: 1;
          LayoutMode: Top;
          Padding: (Left: 20);

          Label { Text: "SUFFIX"; Style: @SectionLabelStyle; Anchor: (Bottom: 8); }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 100, Bottom: 10);

            $C.@TextField #SuffixField {
              Anchor: (Width: 180, Height: 38);
            }

            ColorPicker #SuffixColorPicker {
              Anchor: (Width: 120, Height: 100, Left: 12);
              Style: $C.@DefaultColorPickerStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 28, Bottom: 15);

            $C.@CheckBoxWithLabel #SuffixBold { @Text = "Bold"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #SuffixItalic { @Text = "Italic"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #SuffixUnderline { @Text = "Underline"; }
          }

          Label { Text: "MESSAGE"; Style: @SectionLabelStyle; Anchor: (Bottom: 8); }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 100, Bottom: 10);

            ColorPicker #MessageColorPicker {
              Anchor: (Width: 120, Height: 100);
              Style: $C.@DefaultColorPickerStyle;
            }

            Label {
              Text: "Color of chat messages";
              Style: @FieldDescStyle;
              Anchor: (Left: 14);
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 28);

            $C.@CheckBoxWithLabel #MessageBold { @Text = "Bold"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #MessageItalic { @Text = "Italic"; Anchor: (Right: 15); }
            $C.@CheckBoxWithLabel #MessageUnderline { @Text = "Underline"; }
          }
        }
      }

      Group { FlexWeight: 1; }

      Group {
        LayoutMode: Left;
        Anchor: (Height: 50, Top: 15);

        $C.@TextButton #SaveButton {
          Text: "Save";
          Anchor: (Width: 120, Height: 44, Right: 12);
        }

        $C.@CancelTextButton #CancelButton {
          Text: "Cancel";
          Anchor: (Width: 120, Height: 44);
        }
      }
    }
  }
}

$C.@BackButton {}
